<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="Consol">
            <PatternLayout>
                <Pattern>%d %p %c{2} [%t] %l %m%n</Pattern>
            </PatternLayout>
        </Console>
        <File name="File" filename="target/logs/cloudAutomation.log">
            <PatternLayot>
                <Pattern>%d %p %c{2} [%t] %l %m%n</Pattern>
            </PatternLayot>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Consol"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>